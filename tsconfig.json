{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "ES2019",
        "esModuleInterop": true,
        "allowJs": true,
        "moduleResolution": "node"
    },
    "include": [
      "src/**/*.ts",
      "knexfile.ts"
    ],
    "exclude": [
      "**/*.spec.ts",
      "**/*.test.ts"
    ],
    "types": [ "node" ],
    "typeRoots": [ "node_modules/@types" ]
} 